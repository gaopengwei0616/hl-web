<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:th="http://www.thymeleaf.org">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>控制台页面</title>


    <link rel="stylesheet" href="css/style.default.css" type="text/css"/>
    <script type="text/javascript" src="js/plugins/jquery-1.7.min.js"></script>
    <script type="text/javascript" src="js/script.js"></script>
    <script type="text/javascript" src="js/MyPage.js"></script>
    <link rel="stylesheet" type="text/css" href="css/page.css"/>


    <!--[if lte IE 8]>
    <script language="javascript" type="text/javascript" src="js/plugins/excanvas.min.js"></script><![endif]-->
    <!--[if IE 9]>
    <link rel="stylesheet" media="screen" href="css/style.ie9.css"/>
    <![endif]-->
    <!--[if IE 8]>
    <link rel="stylesheet" media="screen" href="css/style.ie8.css"/>
    <![endif]-->
    <!--[if lt IE 9]>
    <script src="js/plugins/css3-mediaqueries.js"></script>
    <![endif]-->
</head>
<body>

<div class="pageheader">
    <ul class="breadcrumbs">
        <li><a href="">内容</a></li>
        <li><a href="">内容相关配置</a></li>
        <li><a href="">模型管理</a></li>
        <li>模型字段管理</li>
    </ul>
</div><!--pageheader-->
<div id="contentwrapper" class="contentwrapper">

    <div style="margin-bottom: 5px">
        <!--<input type="button" value="添加字段" class="stdbtn dbtn btn_black" onclick="changeUrl('/ModelManager/')">-->
        <input type="button" value="管理模型字段" class="stdbtn btn_black"  onclick="changUrl('/ModelManagerList');">
    </div>
    <div id="datalist">
        <table cellpadding="0" cellspacing="0" border="0" class="stdtable" id="dyntable2">
            <colgroup>
                <col class="con0" style="width: 10%"/>
                <col class="con1" style="width: 10%"/>
                <col class="con0" style="width: 10%"/>
                <col class="con1" style="width: 10%"/>
                <col class="con0" style="width: 10%"/>
                <col class="con1" style="width: 10%"/>
                <col class="con0" style="width: 10%"/>
                <col class="con1" style="width: 10%"/>
            </colgroup>
            <thead>
            <tr style="height: 10px;">
                <th class="head0" >字段ID</th>
                <th class="head1">字段名</th>
                <th class="head0">别名</th>
                <th class="head1">类型</th>
                <th class="head0">系统</th>
                <th class="head1">必填</th>
                <th class="head0">搜索</th>
                <th class="head0">投稿</th>
               <!-- <th class="head1">管理操作</th>-->

            </tr>
            </thead>
            <tbody>
            <tr th:each="list:${pageList}">
                <td><input type="text"th:value="${list.listorder}"style="width: 20px;text-align: center;"/></td>
                <td th:text="${list.field}"></td>
                <td th:text="${list.name}"></td>
                <td th:text="${list.formtype}"></td>
                <td th:text="${list.issystem}"></td>
                <td th:text="${list.isunique}"></td>
                <td th:text="${list.issearch}"></td>
                <td th:text="${list.isadd}"></td>
              <!--  <td>
                    <button class="stdbtn btn_black" onclick="changeUrl('/addEditModelField?type=edit&fieldId='+${list.field}+'')">修改</button>
                    <button class="stdbtn btn_black" >删除</button>
                    <button class="stdbtn btn_black">禁用</button>
                </td>-->
            </tr>
            </tbody>
        </table>
        <input id="siteid"th:value="${pageList[0].siteid}" style="display: none"/>
        <input id="modelid"th:value="${pageList[0].modelid}"style="display: none"/>
    </div>
    <div class="pages">
        <span th:text="'显示'+${page.pageSize}+'条'"></span>
        <span id="page_total" th:value="${page.total}" th:text="'共有'+${page.total}+'条记录'"></span>
        <span th:value="${page.pages}" th:text="'共有'+${page.pages}+'页'"></span>
        <span class="page" id="Page" style="float: right"></span>
    </div>
    <input type="hidden" id="value" th:value="${value}"/>
    <!--以下为公共部分-->
    <script>
        var total = $("#page_total").attr("value");
        P.initMathod({
            params: {
                elemId: '#Page',
                total: this.total
            }, requestFunction: function (pageIndex) {
                if ($("#value").val() == 1) {
                    $("#value").val(0);
                    return;
                }
                var siteid = $("#siteid").val();
                var modelid=$("#modelid").val();
                window.location.href = "/FieldManage?pageNum=" + pageIndex+"&siteid="+siteid+"&modelid="+modelid;
            }
        });

    </script>
</div><!-- centercontent -->

</body>
</html>
