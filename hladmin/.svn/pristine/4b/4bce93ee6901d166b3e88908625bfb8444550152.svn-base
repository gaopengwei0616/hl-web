<!-- 顶部包括标签切换 -->
<body>
<div class="container">
    <div class='row'>
        <!-- 顶部 -->
        <div id="header">
            <img id="logo" src="${pageContext.request.contextPath}/img/logo.png"
                 alt="">
            <div id="language">
                <a href="#" class="weixin"><img
                        src="${pageContext.request.contextPath}/img/weixin.png" alt=""
                        style="width: 25px; height: 25px;">微信</a>&nbsp;&nbsp; <img
                    src="${pageContext.request.contextPath}/img/sj.png" alt=""
                    style="width: 20px; height: 20px;">&nbsp;&nbsp; <a
                    href="javascript:zh_tran('s');" class="zh_click" id="zh_click_s">简体</a>
                &nbsp;&nbsp; <a href="javascript:zh_tran('t');" class="zh_click"
                                id="zh_click_t">繁体</a>
            </div>
            <div class="ewm">
                <img src="${pageContext.request.contextPath}/img/ewm.jpg" alt=""
                     style="width: 100px; height: 100px;">
            </div>
            <div class="lunbos">
                <ul class="lunbo" style="z-index: -1;">
                    <c:forEach items="${topPicList }" var="top">
                        <li class="active item"><img src="${top.thumb }" alt="">
                        </li>
                    </c:forEach>
                </ul>
            </div>

            <!-- 导航条标签 -->
            <div class="navs">
                <a class="brand" href="http://www.huilai.gov.cn/"> <img
                        src="${pageContext.request.contextPath}/img/home.png" alt=""
                        style="width: 50%; height: 50%">
                </a>
                <ul class="nav">
                    <li class="col-lg-3 active"><a
                            href="http://www.huilai.gov.cn/">首页</a></li>
                    <li class="col-lg-3"><a
                            href="http://www.huilai.gov.cn//index.php?m=link&c=index&a=list_type">政务公开</a>
                    </li>
                    <li class="col-lg-3"><a
                            href="http://www.gdzwfw.gov.cn/portal/index?region=445224">政务服务</a>
                    </li>
                    <li class="col-lg-3"><a
                            href="http://www.huilai.gov.cn//index.php?m=vote&c=index&siteid=1">走进惠来</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="section">
    <div style="width: 900px;text-align: center;margin:0 auto">
        <div style="color: red;text-align: center;height: 60px;"><h2>${'#yw.title'}</h2></div>
        <div style="margin-top: 100px">${'#yw.content'}</div>
