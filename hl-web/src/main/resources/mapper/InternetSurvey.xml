<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.eda.dao.InternetSurveyMapper">
    <resultMap id="InternetSurveyResultMap" type="com.eda.pojo.InternetSurvey">

        <id column="id" property="id"/>

        <result column="title" property="title"/>

        <result column="begin_time" property="begin_time"/>

        <result column="description" property="description"/>

        <result column="create_time" property="create_time"/>

        <result column="end_time" property="end_time"/>

    </resultMap>

    <resultMap id="SurveyResultMap" type="com.eda.pojo.Survey">

        <id column="id" property="Id"/>

        <result column="ticket" property="ticket"/>

        <result column="content" property="content"/>

        <result column="parent_id" property="parent_id"/>

        <association property="internetSurvey" javaType="InternetSurvey">
            <id property="id" column="id"/>
            <result property="title" column="title"/>
            <result property="begin_time" column="begin_time"/>
            <result property="end_time" column="end_time"/>
        </association>

    </resultMap>

    <resultMap id="SurveyMap" type="com.eda.pojo.Survey">

        <id column="id" property="Id"/>

        <result column="ticket" property="ticket"/>

        <result column="content" property="content"/>

        <result column="parent_id" property="parent_id"/>

    </resultMap>

    <select id="selectInternetSurvey" resultMap="InternetSurveyResultMap">
		 select id,title,begin_time,end_time from internet_survey
	</select>

    <select id="selectSurveyByid" resultMap="SurveyResultMap">
		select b.id,b.title,b.begin_time,b.end_time,a.ticket,a.content,a.parent_id from survey a inner join  internet_survey b on  a.parent_id=b.id where b.id=#{parentid}
	</select>

    <select id="selectSurveyByparentid" resultMap="SurveyMap">
		select id,ticket,content,parent_id from survey where parent_id=#{parentid}
	</select>

    <select id="selectSurveyByids" resultType="com.eda.pojo.Survey">
		select id,ticket,content,parent_id from survey where id=#{id}
	</select>

    <update id="updateSurveyByid">
           update survey set ticket=#{ticket} where id=#{ticketid}
    </update>

</mapper>